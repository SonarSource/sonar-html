<profile>
  <name>Sonar way</name>
  <language>web</language>
  <rules>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>AvoidHtmlCommentCheck</key>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>DynamicJspIncludeCheck</key>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>IllegalTagLibsCheck</key>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>InlineStyleCheck</key>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>InternationalizationCheck</key>
      <parameters>
        <parameter>
          <key>attributes</key>
          <value>outputLabel.value, outputText.value</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>JspScriptletCheck</key>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>LibraryDependencyCheck</key>
      <parameters>
        <parameter>
          <key>libraries</key>
          <value>java.sql,javax.sql</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>LongJavaScriptCheck</key>
      <parameters>
        <parameter>
          <key>maxLines</key>
          <value>5</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>MultiplePageDirectivesCheck</key>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>WhiteSpaceAroundCheck</key>
    </rule>

    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>FileLengthCheck</key>
    </rule>
    
    <!-- XHTML checks -->
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>ComplexityCheck</key>
      <parameters>
        <parameter>
          <key>max</key>
          <value>12</value>
        </parameter>
        <parameter>
          <key>tags</key>
          <value>catch, choose, if, forEach, forTokens,when</value>
        </parameter>
        <parameter>
          <key>operators</key>
          <value>&amp;&amp;, ||, and,or</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>DocTypeCheck</key>
      <parameters>
        <parameter>
          <key>dtd</key>
          <value>http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>DoubleQuotesCheck</key>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>IllegalAttributeCheck</key>
      <!-- see http://www.w3.org/TR/REC-html40/index/attributes.html -->
      <parameters>
        <parameter>
          <key>attributes</key>
          <value>CAPTION.align, IFRAME.align, IMG.align, INPUT.align, OBJECT.align,
            LEGEND.align, TABLE.align, HR.align,
            DIV.align, H1.align, H2.align, H3.align, H4.align, H5.align, H6.align, P.align,
            alink, background, bgcolor,
            IMG.border, OBJECT.border, clear, color, compact, face, hspace, TD.height, TH.height,
            language, link,
            noshade, nowrap, HR.size, FONT.size, start, text, LI.type, OL.type, UL.type, LI.value,
            version,
            HR.width,
            PRE.width, TD.width, TH.width</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>IllegalElementCheck</key>
      <!-- see http://www.w3.org/TR/REC-html40/index/elements.html -->
      <parameters>
        <parameter>
          <key>elements</key>
          <value>applet, basefont, center, dir, font, isindex, menu, s, strike, u</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>IllegalTabCheck</key>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>MaxLineLengthCheck</key>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>RequiredAttributeCheck</key>
      <parameters>
        <parameter>
          <key>attributes</key>
          <value>img.alt,script.type</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>UnclosedTagCheck</key>
      <parameters>
        <parameter>
          <key>ignoreTags</key>
          <value>verbatim</value>
        </parameter>
      </parameters>
    </rule>
    <rule>
      <repositoryKey>Web</repositoryKey>
      <key>AvoidCommentedOutCodeCheck</key>
    </rule>
  </rules>

</profile>
